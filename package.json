{
  "//": "⚠️  TEMPLATE SETUP: Update 'name' and 'description' for your project",
  "name": "ai-monorepo-template",
  "version": "1.0.0",
  "private": true,
  "description": "AI-Powered Monorepo Automation Template",
  "scripts": {
    "prepare": "husky install",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "validate": "npm run lint && npm run test",
    "setup": "chmod +x scripts/*.sh && ./scripts/setup-dev.sh"
  },
  "//workspaces": "To rename workspaces: 1) Rename directories, 2) Update this array, 3) Update workflow paths in .github/workflows/*.yml",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^16.2.6",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": [
      "cd frontend && npm run lint:fix",
      "cd frontend && npm run format"
    ],
    "backend/**/*.js": [
      "cd backend && npm run lint:fix",
      "cd backend && npm run format"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "//engines": "Adjust these requirements based on your project needs. For other languages (Python, Go, etc.), you can remove this package.json entirely.",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
